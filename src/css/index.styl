@import "../../node_modules/tracim_lib/src/css/Variable.styl"

.wsContentThread
  width 550px
  &__header
    color white
    background-color threadColor
    &__editionmode
      display none
    &__icon
      .fa-comments-o
        color white
  &__app
    display flex
    flex-flow column
    width 100%
    &__messagelist
      flex 1 1 auto
      margin 0
      padding 15px 35px
      list-style none
      overflow-y auto
      background-color off-white
      &__item
        &__avatar
          position relative
          top 40px
          left -20px
          & > img
            width 45px
            height 45px
            border-radius 25px
        &__createhour
          margin-left 35px
          opacity 0.7
          font-size 14px
        &__content
          display inline-block
          border 1px solid grey
          border-radius 5px
          padding 15px
          background-color off-white
          font-size 15px
    &__texteditor
      flex 0 1 auto
      border-top 1px solid grey
      &__simpletext
        &__input
          &:focus
            color darkBlue
            border-color darkBlue
      &__submit
        &__btn
          display flex
          border-color threadColor
          color off-white
          background-color threadColor
          &:hover, &:focus
            border-color darkenThread
            background-color darkenThread
            box-shadow shadow-all-side-thread

.received
  text-align right
  .wsContentGeneric__messagelist__item
    &__avatar
      left 20px
    &__createhour
      margin-left 0
      margin-right 35px
    &__content
      color white
      background-color threadColor

.activeEditionTitle
  .wsContentThread
    &__header
      &__editionmode
        display block
      &__title
        display none

@media (min-width: max-xs) and (max-width: max-md)
  .wsContentThread
    &__app
      &__texteditor
        padding 7px
        &__simpletext
          display inline-flex
          width 70%
        &__submit
          display inline-flex
          margin-left 30px

@media (min-width: min-sm) and (max-width: max-sm)
  .wsContentThread
    top 69px

@media (max-width: max-xs)
  .wsContentThread
    top 69px
    width 100%
    box-shadow none
    z-index 1
    &__app
      &__texteditor
        padding 7px
        &__simpletext
          display inline-flex
          margin-right 15px
          width 62%
        &__submit
          display inline-flex
