@import "../../node_modules/tracim_frontend_lib/src/css/Variable.styl"

backgroundrules()
  margin-bottom 15px
  border-radius 10px
  background-color offWhite

title()
  font-size 20px
  font-weight 400

label()
  font-weight 500
  font-size 18px

.workspace_advanced
  width 1000px
  height 100%
  overflow-y auto
  &-content
    width 1000px
    padding 10px 10px 0 10px
  &__contentpage__content
    // CÃ´me - 2018/09/19 - the rule bellow get override by other apps including frontend_lib, so !important
    height calc(100% - 134px) !important
    overflow-y auto
  &__description
    backgroundrules()
    &__title
      title()
      padding 10px 0 25px 10px
      border-bottom 1px solid grey
    &__text
      padding 10px
      & > textarea
        width 100%
    &__btn
      padding 10px
  &__userlist
    backgroundrules()
    position relative
    &__title
      title()
      margin-bottom 25px
      padding 10px 0 0 10px
    &__list
      margin 0
      padding 0
      //height 300px
      //overflow-y auto
      list-style none
      &__item
        display flex
        align-items center
        border-top 1px solid grey
        padding 10px
        &__role
          margin 0 50px 0 auto
          .btndropdown
            display flex
            align-items center
            border none
            padding 10px
            width 250px
            background-color transparent
            cursor pointer
            &::after
              display flex
              justify-content flex-end
            &.bordered
              border 1px solid grey
              border-radius 10px
          .subdropdown
            width 250px
            padding 0
            &__item
              display flex
              align-items center
              padding 10px
              &__icon
                margin-right 15px
        &__delete
          font-size 20px
          cursor pointer
    &__adduser
      border-top 1px solid grey
      padding 20px
      &__button
        display flex
        align-items center
        border-color grey
        color grey
        &__avatar
          display flex
          justify-content center
          align-items center
          margin-right 20px
          border-width 2px
          border-style dashed
          border-radius 50%
          width 50px
          height 50px
          cursor pointer
          &__icon
            font-size 25px
        &__text
          font-size 18px
          cursor pointer
    &__form
      padding 15px
      flex-direction column
      height 100%
      width 100%
      background-color offWhite
      &__close
        font-size 20px
        cursor pointer
      &__member
        &__name
          .name__label
            margin 30px 0 20px 0
            font-size 18px
        .name__input
          margin-bottom 20px
          border 1px solid grey
          border-radius 10px
          padding 10px
          width 300px
      &__role
        margin-bottom 15px
        &__text
          margin 15px 0
          font-size 18px
        &__list
          margin 0
          padding 0
          list-style none
          &__item
            display flex
            align-items center
            margin 10px 25px 10px 0
            .item
              &__text
                display flex
      &__submitbtn
        display flex
        justify-content flex-end
        & > button
          padding 8px 30px
          cursor pointer
          &:first-child
            margin-right 15px
  &__functionality
    backgroundrules()
    &__title
      title()
      padding 10px
    &__text
      margin-bottom 20px
      padding-left 10px
    &__list
      margin 0
      padding 0
      list-style none
      &__item
        display flex
        align-items center
        justify-content space-between
        margin-bottom 20px
        padding 5px 10px
        width 100%
        &:hover
          color offWhite
          background-color blue
        &__text
          font-size 18px

/**** MEDIA QUERIES ****/

@media (min-width: min-sm) and (max-width: max-sm)

  .appdashboard
    width 100%

@media (max-width: max-xs)

  .appdashboard
    width 100%
    padding 10px 0
    &__userlist
      &__list
        &__item
          flex-wrap wrap
          &__role
            margin-left 7px
            .btndropdown
              &:focus
                outline none
          &__delete
            display none
      &__form
        &__role
          margin-bottom 0
          &__list
            display block
    &__functionality__list
      &__item
        display block
        .item__text
          margin-bottom 15px

