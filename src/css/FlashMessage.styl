.flashmessage
  position fixed
  display flex
  justify-content center
  width 100%
  z-index 10
  &__container
    margin-top 50px
    border 0
    border-radius 10px
    width 800px
    background lightGrey
    box-shadow shadow-all
    &__header
      border-top-right-radius 10px
      border-top-left-radius 10px
      width 100%
      height 8px
      &.success
        background-color success
      &.info
        background-color info
      &.danger
        background-color danger
    &__close
      display flex
      justify-content flex-end
      margin 5px
      &__icon
        padding-right 10px
        cursor pointer
    &__content
      display flex
      align-items center
      margin 10px 0 25px 0
      &__icon
        padding 0 30px
        font-size 40px
        &.success
          color success
        &.info
          color info
        &.danger
          color danger
      &__text
        &__title
          font-size 20px
          font-weight 600
          color calendar
        &__paragraph
          padding-right 20px
          font-weight 500
