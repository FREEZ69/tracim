.flashmessage
  position fixed
  display flex
  justify-content center
  width 100%
  z-index 3
  &__wrapper
    margin-top 120px
    border 0
    border-radius 10px
    width 800px
    background lightGrey
    box-shadow shadow-all
  &__header
    border-top-right-radius 10px
    border-top-left-radius 10px
    width 100%
    height 8px
    background-color calendar
  &__close
    display flex
    justify-content flex-end
    margin 5px
    cursor pointer
  &__content
    display flex
    align-items center
    margin 10px 0 35px 0
    &__icon
      padding 0 30px
      font-size 60px
      color calendar
    &__text
      &__title
        margin-bottom 10px
        font-size 20px
        font-weight 600
        color calendar
      &__paragraph
        padding-right 20px
        font-weight 500
