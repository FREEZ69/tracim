@import "../../node_modules/tracim_frontend_lib/src/css/Variable.styl"

.thread
  width 70%
  .comment
    &.received
      .comment__header__text
        padding-left calc(5% + 4px)
        padding-right 0
    &.sent
      .comment__header__text
        padding-right calc(5% + 4px)
        padding-left 0
  &__header
    &__editionmode
      display none
    &__icon
      .fa-comments-o
        color white
  .selectStatus
    margin-right 15px
  .timeline
    margin 0
  .thread
    &__contentpage
      width 100%
      &__content
        width 100%
      &__texteditor
        flex 0 0 auto

// MEDIAQUERIES

@media (min-width: min-sm) and (max-width: max-sm)
  .thread
    top 68px
    width 100%

@media (max-width: max-xs)
  .thread
    top 68px
    width 100%
