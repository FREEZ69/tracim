@import '../../../css/Variable.styl'

.cardPopup
  position fixed
  display flex
  justify-content center
  width 100%
  z-index 10
  &__container
    margin-top 50px
    border 0
    border-radius 10px
    width 800px
    background lightGrey
    box-shadow shadow-all
  &__header
    border-top-right-radius 10px
    border-top-left-radius 10px
    width 100%
    height 8px
  &__close
    display flex
    justify-content flex-end
    margin 5px
    cursor pointer
  &__body
    display flex
    align-items center
    margin 10px 0 25px 0
    &__icon
      padding 0 30px
      font-size 40px
    &__text
      &__title
        font-size 20px
        font-weight 600
      &__message
        padding-right 20px
        font-weight 500
