@import '../../../css/Variable.styl'

.selectStatus
  &__dropdownbtn
    border 1px solid grey
    background-color transparent
    cursor pointer
    &::after
      color fontColor
    &:hover
      background-color transparent
    &__label
      margin-right 10px
      color #333
    &__icon
      display inline-block
      margin 0 15px
  &__submenu
    &__item
      display flex
      justify-content space-between
      margin 5px 0
      cursor pointer
      &:active
        background-color transparent
