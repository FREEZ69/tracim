@import '../../../css/Variable.styl'

.editiontitle
  width 60%

.editionmode
  display flex
  flex-direction column
  align-items center
  width 100%
  height calc(100% - 50px)
  &__text
    margin-bottom 25px
    width 100%
    height calc(100% - 50px)
  &__button
    margin 25px 0
    width 100%
    &__cancel
      cursor pointer
    &__submit
      cursor pointer
