@import "../../node_modules/tracim_frontend_lib/src/css/Variable.styl"

flexwrap()
  display flex
  flex-wrap wrap

.dashboard
  width 100%
  &__header
    flexwrap()
    align-items center
    justify-content space-between
    &__title
      width auto
      &__text
        margin 0
  &__workspace-wrapper
    flexwrap()
  &__workspace
    margin-right 20px
    width calc(65% - 20px) //20px => margin-right
    &__title
      margin-bottom 20px
      font-size 40px
      font-weight 500
    &__detail
      margin-bottom 20px
      font-size 18px
  &__calltoaction
    flexwrap()
    margin 100px 0
    &__button
      &:active
        box-shadow inset 0px 0px 5px 2px #656565
      &__text
        color white
        &__icon
          font-size 30px
        &__title
          font-size 18px
  &__workspaceInfo
    margin-bottom 50px
    flexwrap()

// MEDIAQUERIES

@media (min-width: min-md) and (max-width: max-md)

  .dashboard
    &__workspace
      width 100%
    .memberlist
      margin-left 0

@media (min-width: min-sm) and (max-width: max-sm)

  .dashboard
    &__header
      &__advancedmode
        display none
    &__workspace
      width 100%
    &__calltoaction
      &__button:nth-child(even)
        margin-right 0

@media (max-width: max-xs)

  .dashboard .pageContentGeneric
    margin 10px 0 0 0

  .dashboard
    &__header
      &__advancedmode
        display none
    &__workspace-wrapper
      margin 0 15px
    &__workspace
      width 100%
    &__calltoaction
      flex-direction column
      align-items center
      justify-content center
      &__button
        margin 20px 0
    .memberlist
      &__list__item__delete
        display none
      &__btnadd
        display none

