@import "../../../node_modules/tracim_frontend_lib/src/css/Variable.styl"

detail()
  margin-left calc(50% - 120px)
  font-size 25px

.userstatus
  width 27%
  position relative
  top -60px
  border-radius 5px
  padding 40px
  background-color lightGrey
  &__username
    text-align center
    font-size 25px
  &__role
    detail()
    padding 25px 0 15px 0
    &__icon
      margin-right 20px
  &__notification
    display flex
    align-items center
    detail()
    padding 20px 0 10px 0
    cursor pointer

@media (min-width: min-lg) and (max-width: max-lg)
  .userstatus
    width 28%

@media (min-width: min-md) and (max-width: max-md)
  .userstatus
    top 0
    margin 0 auto 40px auto
    width 50%
    &__wrapper
      top 0

@media (min-width: min-sm) and (max-width: max-sm)
  .userstatus
    top 0
    margin 0 auto 40px auto
    width 50%
    &__wrapper
      top 0

@media (max-width: max-xs)
  .userstatus
    top 0
    margin 0 auto 40px auto
    width 100%
    &__wrapper
      top 0

