@import '../../css/Variable.styl'

.revision
  display flex
  justify-content space-between
  align-items center
  margin-top 20px
  padding 10px 15px
  width 100%
  background-color lightGrey
  &__data
    &__nb
      display inline-block
      min-width 20px
      text-align right
      margin-right 5px
      font-weight bold
    &__icon
      margin-right 4px
  &__date
    color grey
    font-size 17px
    margin auto 15px
