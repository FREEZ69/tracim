@import "../../node_modules/tracim_lib/src/css/Variable.styl"

.thread
  width 1100px
  &__header
    &__editionmode
      display none
    &__icon
      .fa-comments-o
        color white
  .selectStatus
    margin-right 15px
  .timeline
    margin 0
  .thread
    &__contentpage
      &__content
        width 100%
      &__messagelist
        &__item__avatar
          border 1px solid darkenThread
          background-color off-white
      &__texteditor
        flex 0 0 auto

@media (min-width: min-lg) and (max-width: max-lg)
  .wsContentThread
    width 900px

@media (min-width: min-md) and (max-width: max-md)
  .wsContentThread
    width 700px

@media (min-width: min-sm) and (max-width: max-sm)
  .wsContentThread
    top 69px
    width 500px

@media (max-width: max-xs)
  .wsContentThread
    top 69px
    width 100%
    box-shadow none
    z-index 1
