a
  color fontColor
  &:hover, &:link, &:visited
    color fontColor
    text-decoration none

.tracim
  height 100%
  &__content
    height 100%
    width 100%

.outlineTextBtn
  padding 10px 15px
  background-color transparent
  cursor pointer
  &:hover
    color off-white
  &.nohover
    &:hover
      color inherit

.highlightBtn
  padding 10px 25px
  color off-white
  cursor pointer

.sidebarpagecontainer
  display flex
  padding-top 88px
  min-height 100%

.pageWrapperGeneric
  width 100%
  &__header
    display flex
  &__content
    margin 10px 10px 120px 10px
@media (min-width: min-md) and (max-width: max-md)
  .pageWrapperGeneric
    display block
    &__header
      margin 95px 0 5px 30px
    &__content
      margin 0
@media (min-width: min-sm) and (max-width: max-sm)
  .pageWrapperGeneric
    display block
    &__header
      margin 95px 0 35px 0
      &__title
        display inline-block
        margin-left 0
    &__content
      margin 0
@media (max-width: max-xs)
  .pageWrapperGeneric
    display block
    &__header
      display block
      margin-top 60px
    &__content
      margin 0

.nopadding
  padding 0

.pageTitleGeneric
  margin 45px 0
  width 100%
  &__title
    margin-left 10px
    font-size 30px
    color darkGrey
@media (max-width: max-xs)
  .pageTitleGeneric
    display block


.pageContentGeneric
  margin 10px 30px 0 30px
  width 100%
  height 100%

.dropdownCreateBtn
  margin-left 10px
  &__label
    &__text
      display inline-block
      color white
    &::after //bootstrap override
      display inline-block
      margin-left 30px
      color white
  &__setting
    padding 0
    cursor pointer
    .setting__link
      padding 10px
      cursor pointer

.fileColor
  color fileColor

.threadColor
  color threadColor

.taskColor
  color taskColor

.markdownColor
  color markdownColor

.htmlColor
  color htmlColor

.issueColor
  color issueColor

.gestionnaire
  color gestionnaire

.contributeur
  color contributeur

.responsable
  color responsable

.lecteur
  color lecteur

.subTitle
  font-size 20px
  font-weight 500

.genericBtnInfoDashboard
  &__btn
    display flex
    margin-bottom 30px
    border-width 1px
    border-style solid
    border-radius 10px
    padding 10px 25px
    cursor pointer
    &:hover
      color off-white
    &__icon
      margin-right 20px
      font-size 30px
  &__info
    border 1px solid grey
    border-radius 10px
    padding 15px 25px
    &__text
      margin-bottom 35px
    &__link
      display inline-block
      margin-bottom 15px
      border 1px solid grey
      border-radius 10px
      padding 15px
