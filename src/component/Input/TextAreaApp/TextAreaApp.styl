@import '../../../css/Variable.styl'

.editiontitle
  width 60%

.editionmode
  display flex
  flex-direction column
  align-items center
  width 100%
  &__text
    margin-bottom 25px
    width 100%
    height 250px
  &__button
    display flex
    justify-content flex-end
    margin-top 15px
    width 100%
    &__cancel
      cursor pointer
    &__submit
      cursor pointer
