.tracim
  height 100%
  &__content
    height 100%


.btn-primary
  background-color thirdColor
  border-color secondColor
  &:hover, &:focus, &:active, &:visited, &:focus-within
    background-color hover-button
    border-color hover-button
    box-shadow 0 0 1px 2px secondColor
    outline secondColor solid 1px

.btn-outline-primary
  color fontColor
  border-color secondColor
  &:hover, &:focus, &:active, &:visited, &:focus-within
    background-color hover-button
    border-color hover-button
    box-shadow 0 0 1px 2px secondColor
    outline secondColor solid 1px

.btn-primary.active, .btn-primary:active, .show>.btn-primary.dropdown-toggle
  background-color hover-button
  border-color hover-button
  box-shadow 0 0 1px 2px secondColor
  outline secondColor solid 1px

.btn-outline-primary.active, .btn-outline-primary:active, .show>.btn-outline-primary.dropdown-toggle
  background-color hover-button
  border-color hover-button
  box-shadow 0 0 1px 2px secondColor
  outline secondColor solid 1px

.sidebarpagecontainer
  display flex
  padding-top 88px
  min-height calc(100% - 50px)

.pageWrapperGeneric
  width 100%
  &__header
    display flex
  &__content
    margin 10px 10px 120px 10px
@media (min-width: min-md) and (max-width: max-md)
  .pageWrapperGeneric
    display block
    &__header
      margin 95px 0 5px 30px
    &__content
      margin 0
@media (min-width: min-sm) and (max-width: max-sm)
  .pageWrapperGeneric
    display block
    &__header
      margin 95px 0 35px 0
      &__title
        display inline-block
        margin-left 0
    &__content
      margin 0
@media (max-width: max-xs)
  .pageWrapperGeneric
    display block
    &__header
      display block
      margin-top 60px
    &__content
      margin 0

.nopadding
  padding 0

.pageTitleGeneric
  margin 45px 0
  width 100%
  &__title
    margin-left 10px
    font-size 30px
    color darkGrey
@media (max-width: max-xs)
  .pageTitleGeneric
    display block


.pageContentGeneric
  margin 10px 0 0 0
  width 100%
  height 100%

.dropdownCreateBtn
  margin-left 10px
  &__label
    padding 10px 65px
    background-color thirdColor
    cursor pointer
    &__text
      display inline-block
      color white
    &::after //bootstrap override
      display inline-block
      margin-left 30px
      color white
  &__setting
    padding 0
    cursor pointer
    .setting__link
      padding 10px

.fa-file-image-o
  color previewColor

.fa-comments-o
  color threadColor

.fa-list-ul
  color taskColor

.fa-file-code-o
  color markdownColor

.fa-file-text-o
  color htmlColor

.fa-ticket
  color issueColor

.fa-graduation-cap
  color gestionnaire

.fa-pencil
  color contributeur

.fa-gavel
  color responsable

.fa-eye
  color lecteur

.subTitle
  font-size 20px
  font-weight 500
  color thirdColor

.btnaction
  display flex
  flex-direction column
  justify-content center
  margin 20px 30px 20px 0
  border-radius 10px
  padding 15px
  width 230px
  height 200px
  box-shadow shadow-all
  text-align center
  cursor pointer

.genericBtnInfoDashboard
  &__btn
    display flex
    margin-bottom 30px
    border 1px solid thirdColor
    border-radius 10px
    padding 15px 25px
    color thirdColor
    cursor pointer
    &:hover, &:focus
      background-color thirdColor
      color white
    &__icon
      margin-right 20px
      font-size 30px
  &__info
    border 1px solid grey
    border-radius 10px
    padding 15px 25px
    &__text
      margin-bottom 35px
    &__link
      display inline-block
      margin-bottom 15px
      border 1px solid grey
      border-radius 10px
      padding 15px 25px

.genericcontent
  &__close
    cursor pointer
  &__contentname
    &__icon
      font-size 30px
    &__title
      font-size 20px
      color htmlColor
  &__form
    &__input
      & > input
        border: 1px solid grey;
        border-radius: 5px;
        padding: 5px;
        width: 353PX;

