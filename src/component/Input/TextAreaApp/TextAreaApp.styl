@import '../../../css/Variable.styl'

.editiontitle
  width 60%

.editionmode
  display flex
  flex-direction column
  align-items center
  width auto
  &__text
    margin-bottom 25px
    width 100%
    height 250px
  &__submit
    border 1px solid blue
    box-shadow none
    border-radius 10px
    padding 8px 45px
    background-color transparent
    color blue
    &:hover, &:focus
      background-color blue
      color off-white
