.currentColor
  color currentColor

.validateColor
  color validateColor

.cancelColor
  color cancelColor

.outdateColor
  color outdateColor

.file
  display flex
  padding 10px 0
  border-bottom 0
  cursor pointer
  &:hover
    background-color hover-theme
  &__type
    font-size 30px
    text-align center
  &__name
    display flex
    align-items center
    justify-content space-between
    &__text
      margin-right 10px
      font-size 17px
  &__status
    &__text
      margin-left 15px
      font-size 20px
    &__icon
      font-size 30px


@media (min-width: max-xs) and (max-width: max-lg)
  .file
    border-right 1px solid grey
    &__name__icons
        margin-top 5px
