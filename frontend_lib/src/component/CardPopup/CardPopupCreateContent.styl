@import '../../css/Variable.styl'

.popupCreateContent
  position fixed
  top 0
  left 0
  display flex
  justify-content center
  width 100%
  z-index 5
  .cardPopup__container
    margin-top 120px
    border 0
    border-radius 10px
    width 400px
    background lightGrey
    box-shadow shadow-all
  &__header
    border-top-right-radius 10px
    border-top-left-radius 10px
    width 100%
    height 8px
  .createcontent
    width 100%
    &__close
      cursor pointer
    &__contentname
      display flex
      align-items baseline
      &__icon
        font-size 30px
      &__title
        font-size 20px
    &__form
      &__input
        width 100%
        border 1px solid grey
        border-radius 5px
        margin-bottom 25px
        padding 5px
      &__button
        display flex
        justify-content flex-end
        cursor pointer
        &:disabled
          cursor not-allowed
